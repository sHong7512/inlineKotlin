<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/exText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="exText1 go Click!"
        android:textColor="@color/black"
        android:background="#eeeeee"
        android:padding="5dp"
        android:textSize="20dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/exText2" />

    <TextView
        android:id="@+id/exText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="exText2 go Click!"
        android:textColor="@color/black"
        android:background="#eeeeee"
        android:padding="5dp"
        android:textSize="20dp"
        android:layout_marginTop="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/exText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="exText3 go Click!"
        android:textColor="@color/black"
        android:background="#eeeeee"
        android:padding="5dp"
        android:textSize="20dp"
        android:layout_marginTop="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/exText2" />

    <TextView
        android:id="@+id/exText4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="exText4 go Click!"
        android:textColor="@color/black"
        android:background="#eeeeee"
        android:padding="5dp"
        android:textSize="20dp"
        android:layout_marginTop="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/exText3" />

</androidx.constraintlayout.widget.ConstraintLayout>